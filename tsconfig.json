{
  "compilerOptions": {
    "target": "esnext",                     // Use esnext for modern JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",                     // Keep esnext for Next.js
    "moduleResolution": "node",             // Changed from bundler to node for compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",                      // Correct JSX handling for Next.js
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]                        // Allows using '@' for absolute imports
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
